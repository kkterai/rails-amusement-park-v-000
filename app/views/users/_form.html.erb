<%= form_for user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.text_field :password %>

  <%= f.label :nausea %>
  <%= f.number_field :nausea %>

  <%= f.label :happiness %>
  <%= f.number_field :happiness %>

  <%= f.label :height %>
  <%= f.number_field :height %>

  <%= f.label :tickets %>
  <%= f.number_field :tickets %>

  <strong> Check box if you are a theme park owner </strong> <%= check_box("user", "admin") %>

  <%= f.submit  %>
<% end %>
